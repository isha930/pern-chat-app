{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./backend/dist",
		"allowJs": true
	},
	"include": ["backend/src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "frontend"]
}
